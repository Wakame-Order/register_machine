<%= stylesheet_link_tag "login", media: 'all' %>
<section class="login center-block">
  <h2>Log in</h2>

  <%= simple_form_for(resource, as: resource_name,:html => { :class => 'form-horizontal' }, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <div class="form-group">
        <div class="col-sm-10">
          <%= f.input :email, required: false,:html => { :class => 'form-horizontal' }, autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-10">
          <%= f.input :password,class: "form-control", required: false %>
        </div>
      </div>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in" %>
    </div>
  <% end %>
</section>
<%= render "users/shared/links" %>

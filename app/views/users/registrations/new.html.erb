
<%= stylesheet_link_tag "signup", media: 'all' %>

<div class="signup signup-border">
  <h2>アカウント登録</h2>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <%= f.input :email, required: true, autofocus: true, placeholder: 's16zc047@mail.saitama-u.ac.jp',label:"あなたの学内メールアドレスを入力してください" %>
    <%= f.input :password, required: true, placeholder:"JutB4ge", label: "学内パスワードを入力してください" %>
    <%= f.input :password_confirmation, required: true, placeholder:"JutB4ge", label:"学内パスワード確認" %>

    <div class="text-center">
      <%= f.button :submit, "登録" %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>
